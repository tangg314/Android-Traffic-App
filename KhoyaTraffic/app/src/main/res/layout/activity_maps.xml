<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MapActivity"
    android:transitionGroup="true">

    <fragment xmlns:map="http://schemas.android.com/apk/res-auto"
        android:id="@+id/map"
        android:layout_width="match_parent"
        android:layout_height="348dp"
        android:layout_weight="1"
        android:scrollbars="vertical"
        class="com.google.android.gms.maps.SupportMapFragment"
        android:layout_gravity="center"
        android:layout_centerVertical="true"
        android:layout_alignRight="@+id/Dest"
        android:layout_alignEnd="@+id/Dest" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textPostalAddress"
        android:ems="10"
        android:id="@+id/Src"
        android:layout_gravity="right|top"
        android:width="250dp"
        android:layout_alignParentTop="true"
        android:layout_alignLeft="@+id/Dest"
        android:layout_alignStart="@+id/Dest"
        android:layout_alignRight="@+id/Dest"
        android:layout_alignEnd="@+id/Dest"
        android:hint="Current Location" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textPostalAddress"
        android:ems="10"
        android:id="@+id/Dest"
        android:layout_gravity="right|top"
        android:layout_above="@+id/map"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:width="250dp"
        android:hint="Destination" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="SET FUTURE ALERTS"
        android:id="@+id/btn_alert"
        android:layout_below="@+id/map"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentBottom="true" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="START"
        android:id="@+id/btn_start"
        android:layout_alignParentBottom="true"
        android:layout_alignRight="@+id/Dest"
        android:layout_alignEnd="@+id/Dest"
        android:layout_below="@+id/map"
        android:layout_toEndOf="@+id/btn_alert"
        android:layout_toRightOf="@+id/btn_alert" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="FROM:"
        android:id="@+id/textView"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:textSize="22dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="TO:"
        android:id="@+id/textView2"
        android:textSize="22dp"
        android:layout_below="@+id/Src"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

</RelativeLayout>